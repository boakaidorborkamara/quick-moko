<div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="varyModalLabel">Request A Loan</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div>
        <img src="/img/momologo2.jpg" alt="momologo2" width="100%">
      </div>
      <div class="alert alert-success col-lg-12 my-4" role="alert" id="result-area">
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="loan-amount" class="col-form-label">How much you need?</label>
            <input type="number" class="form-control" id="loan-amount" required>
          </div>
          <div class="form-group">
            <label for="currency" class="col-form-label">Curency</label>
            <select name="" id="">
                <option value="">LRD</option>
                <option value="">USD</option>
            </select>
          </div>
          <div class="form-group">
            <label for="payment-date" class="col-form-label">When you will payback?</label>
            <input type="date" class="form-control" id="payment-date" required>
          </div>
          <div class="form-group">
            <p>You have to back: <strong> $<span id="estimated-payment-result">0 LRD</span></strong></p>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn mb-2 btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn mb-2 btn-primary" id="apply-for-loan-btn">Send Request</button>
      </div>
    </div>
  </div>