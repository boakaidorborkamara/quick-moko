    <!-- apply_form_area -->
    <div class="apply_form_area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">

        
                    <div class="alert alert-success d-none" role="alert" id="result-area">
                        This is a danger alertâ€”check it out!
                    </div>

                    <form action="#" class="apply_form" id="registration-form">
                        <!-- step 1 -->
                        <div class="row" id="step1-personal-info">
                            <!-- personal info  -->
                            <div class="col-lg-12">
                                <div class="apply_info_text text-left">
                                    <h1 class="text-center" id="form-header"><strong>Let's Get Started</strong></h1>
                                    <p class="text-center" id="form-body-copy">Provide basic personal info.</p>
                                </div>
                            </div>
                            <!-- first name  -->
                            <div class="col-md-12">
                                <div class="single_field">
                                    <input type="text" placeholder="First Name (required*)"  required minlength="2" id="first-name">
                                </div>
                            </div>
                            <!-- middle name  -->
                            <div class="col-md-12">
                                <div class="single_field">
                                    <input type="text" placeholder="Middle Name" id="middle-name">
                                </div>
                            </div>
                            <!-- last name  -->
                            <div class="col-md-12">
                                <div class="single_field">
                                    <input type="text" placeholder="Last Name (required*)"  required minlength="2" id="last-name">
                                </div>
                            </div>
                            <!-- btn  -->
                            <div class="col-md-12">
                                <div class="submit_btn" >
                                    <button class="boxed-btn3"  type="submit"  id="personal-info-btn">Next</button>
                                </div>
                            </div>
                        </div>
                        <!-- step 2 -->
                        <div class="row d-none" id="step2-mobile-money-info">
                            <!-- mobile money info  -->
                            <div class="col-lg-12">
                                <div class="apply_info_text text-left">
                                    <h1 class="text-center"><strong>Mobile Money Details</strong></h1>
                                    <p class="text-center">This should be an active Money Number register in your name. <br> You will receive an OTP to your phone via sms.</p>
                                </div>
                            </div>
                            <!-- mobile money number  -->
                            <div class="col-md-12">
                                <div class="single_field ">
                                    <input type="tel" placeholder="Mobile Money Number (0880526256)" minlength="10" maxlength="10"  id="mobile-money-number">
                                </div>
                            </div>
                        
                            <div class="col-md-12">
                                <div class="submit_btn" >
                                    <button class="boxed-btn3" type="submit" id="mobile-money-number-submit-btn">Next</button>
                                </div>
                            </div>
                        </div>
                        <!-- step 3  -->
                        <div class="row d-none" id="step3-confirm-mobile-money-info">
                            <!-- otp info  -->
                            <div class="col-lg-12">
                                <div class="apply_info_text text-left">
                                    <h1 class="text-center" id="form-header"><strong>Confirm Mobile Money Number</strong></h1>
                                    <p class="text-center" id="form-body-copy">A code was sent to your number (0880543456), please enter below.</p>
                                </div>
                            </div>
                            <!-- otp  -->
                            <div class="col-md-12">
                                <div class="single_field ">
                                    <input type="password"  minlength="4" maxlength="4"  id="otp-code">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="apply_info_text text-left">
                                    <p>Didn't received code?<br> Wait 59 seconds or <a href="">resend code</a></p>
                                </div>
                            </div>
                            <!-- btn  -->
                            <div class="col-md-12">
                                <div class="submit_btn" >
                                    <button class="boxed-btn3" type="submit" id="confirm-mobile-money-number-submit-btn">Next</button>
                                </div>
                            </div>
                        </div>
                        <!-- step 4  -->
                        <div class="row d-none" id="step4-pin-code-info">
                            <!-- pin code info  -->
                            <div class="col-lg-12">
                                <div class="apply_info_text text-left">
                                    <h1 class="text-center" id="form-header"><strong>Create a PIN Code</strong></h1>
                                    <p class="text-center" id="form-body-copy">Create a 4-digits PIN code. To log in every time, you will use your PIN code.</p>
                                </div>
                            </div>
                            <!-- pin code  -->
                            <div class="col-md-12">
                                <div class="single_field ">
                                    <input type="password" placeholder="Enter a 4-digits PIN Code" minlength="4" maxlength="4"  id="pin-code">
                                </div>
                            </div>
                            <!-- confirm pin code  -->
                            <div class="col-md-12">
                                <div class="single_field ">
                                    <input type="password" placeholder="Confirm PIN Code"  minlength="4" maxlength="4"  id="confirmed-pin-code">
                                </div>
                            </div>
                        
                            <div class="col-md-12">
                                <div class="submit_btn" >
                                    <button class="boxed-btn3" type="submit" id="pin-code-submit-btn">Submit</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--/ apply_form_area -->
